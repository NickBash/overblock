{
  "manifest_version": 2,
  "name": "Overblocks Experimental",
  "description": "Limited experimental edition of the guard of your nervous system.",
  "version": "1.0.1",
  "author": "Nikita Bashkankov",
  "icons": {"128": "img/icon_128.png"},
  "browser_action": {
    "default_title": "OverBlocks",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js", "axios.min.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "downloads",
    "declarativeNetRequest",
    "contentSettings",
    "debugger"
  ],
  "options_page": "options.html"
}
